<div class="table-responsive">
  <table class="table table-striped table-cruises" style="/*border: 1px solid #ccc;*/">
    <thead>
      <tr>
        <th style="width:45%;">Маршрут</th>
        <th>Теплоход</th>
        <th>Отправление</th>
        <th>Дней</th>
        <th>Цена от</th>
        <th style="width:153px;"></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
	
	{% for cruise in cruises %}	

      <tr>
        <td><a href="{{path('homepage')}}cruise/cruisedetails/{{cruise.cruiseUrl.shipCode}}_{{cruise.cruiseUrl.code}}.html">{{cruise.route}}</a></td>
        <td><a href="{{path('page',{'first':'cruise','second':'ship','name':cruise.cruiseUrl.shipCode})}}">{{cruise.ship}}</a></td>
        <td>{{cruise.start}}</td>
        <td>{{cruise.days}}</td>
        <td>{{cruise.minprice | raw }}</td>
        <td style="min-width:153px;">{% if (cruise.burningCruise) %}<span class="table-special-span color-gk">«Горящий» круиз</span>{% endif %}
        {% if (cruise.reductionPrice) %} <span class="table-special-span color-sc">Снижена цена</span> {% endif %}
        {% if (cruise.specialoffer) %} <span class="table-special-span color-st">Специальный тариф</span> {% endif %}</td>

        <td><a href="{{path('cruiseorder_code',{'code':cruise.cruiseUrl.code}) }}">Забронировать</a></td>
		
      </tr>					
					
	{% endfor %}
	
    </tbody>
  </table>
</div>

